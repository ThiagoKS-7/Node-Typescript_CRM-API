// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Client {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  email   String  @unique
  name    String
  phone   String
  status  String
  address Address
  agentId String? @db.ObjectId
  createdAt DateTime? @default(now())
}

type Address {
  street String
  city   String
  number String
  state  String
  zip    String
}

model Agent {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  password String
  clients Json?
  createdAt DateTime? @default(now())
}
